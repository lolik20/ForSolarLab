@model IEnumerable<WebApplication12.Models.UserTask> 
@{
    Layout = null; 
   
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Test task</title>

    <link rel="stylesheet" href="~/css/styles.css">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <header>
        4 level task
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-md-10 col-xs-10 header">
                    <h1>Test task for SolarLab>_</h1>

                </div>
                <div class="col-lg-2 monument">

                </div>
            </div>
        </div>
    </header>
    <main>
        <div class="container">
            <div class="row">
                <div class="form-section">
                    <h1>Список дел</h1>
                    <button class="btn add-btn"><a asp-action="AddTask" asp-controller="Home">Добавить дело</a></button>
                    
                    <div class="container ">
                        @foreach (var item in Model)
                        {
                        <div class="row task">
                            <div class="col-lg-5 col-md-3"><h2>@item.text</h2></div>
                            <div class="col-lg-2 col-md-3"><h2>@item.time</h2></div>
                            <div class="col-lg-3 col-md-2"><h2>@item.date</h2></div>
                            <div class="col-lg-1 col-md-2"><button  class="btn edit-btn"><a  asp-action="Edit" asp-controller="Home" asp-route-id="@item.id">Edit</a></button></div>
                            <div class="col-lg-1 col-md-2"><button  class="btn delete-btn"><a asp-action="Delete" asp-controller="Home" asp-route-id="@item.id">Delete</a></button></div>
                        </div>
                        }
                            


                        </div>
                </div>
            </div>
            </div>
       
    </main>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha384-nvAa0+6Qg9clwYCGGPpDQLVpLNn0fRaROjHqs13t4Ggj3Ez50XnGQqc/r8MhnRDZ" crossorigin="anonymous"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js" integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd" crossorigin="anonymous"></script>
</body>
</html>